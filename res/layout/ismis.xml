<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/linear_gradient">

    <TextView 
        android:id="@+id/title"
        android:text="The University of San Carlos \n       Unified Access Portal"
        android:textSize="22sp"
        android:textColor="#FBC028"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#232323"
        android:shadowDx="1.0000"
        android:shadowDy="1.0000"
        android:shadowRadius="3"
        />
    <ImageView 
        android:id="@+id/image"
        android:background="@drawable/usc_logo"
        android:contentDescription="usc's logo"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_below="@id/title"
        />
    <EditText 
        android:id="@+id/email"
        android:width="280dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image"
        android:background="#FFFFFF"
        android:inputType="textEmailAddress"
        android:layout_marginTop="25dp"
        android:hint="Email"
        />
    
    <EditText 
        android:id="@+id/password"
        android:width="280dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email"
        android:background="#FFFFFF"
        android:inputType="textPassword"
        android:hint="Password"
        />
    
    <Button 
        android:id="@+id/button"
        android:background="@drawable/sign_in_button_set"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/password"
        android:onClick="clicked"
        />
    
    <Button 
        android:background="@drawable/sign_in_button_set"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/button"
        android:onClick="clicked2"
        />
</RelativeLayout>
